<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="RRR"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="32"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg type="String" value="BBB"></constructor-arg>
        <constructor-arg type="String" value="male"></constructor-arg>
        <constructor-arg type="int" value="32"></constructor-arg>
    </bean>

    <bean name="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="CCC"></constructor-arg>
        <constructor-arg index="1" value="male"></constructor-arg>
        <constructor-arg index="2" value="32"></constructor-arg>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie">
        <property name="actor" ref="actor1"></property>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie" autowire="byType">
        <property name="actor" ref="actor2"></property>
    </bean>

    <bean name="movie3,movie4" class="com.stackroute.domain.Movie" autowire="byType" scope = "prototype">
        <property name="actor" ref="actor3"></property>
    </bean>

</beans>