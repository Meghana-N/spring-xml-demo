<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="actor" class="com.stackroute.domain.Actor">
        <property name="name" value="RRR"></property>
        <property name="gender" value="M"></property>
        <property name="age" value="32"></property>

        <!--<constructor-arg name="name" value="RRR"></constructor-arg>-->
        <!--<constructor-arg name="gender" value="male"></constructor-arg>-->
        <!--<constructor-arg name="age" value="32"></constructor-arg>-->
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <!--<constructor-arg type="String" value="BBB"></constructor-arg>-->
        <!--<constructor-arg type="String" value="male"></constructor-arg>-->
        <!--<constructor-arg type="int" value="32"></constructor-arg>-->
        <property name="name" value="BBB"></property>
        <property name="gender" value="M"></property>
        <property name="age" value="31"></property>
    </bean>

    <bean name="actor3" class="com.stackroute.domain.Actor">
        <!--<constructor-arg index="0" value="CCC"></constructor-arg>-->
        <!--<constructor-arg index="1" value="male"></constructor-arg>-->
        <!--<constructor-arg index="2" value="32"></constructor-arg>-->
        <property name="name" value="AAA"></property>
        <property name="gender" value="M"></property>
        <property name="age" value="28"></property>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie">
        <property name="actor" ref="actor"></property>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie" autowire="byName">
    </bean>
    <bean id="movie3" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" ref="actor3"></constructor-arg>
    </bean>

    <bean id="beanLifecycleDemoBean" class="com.stackroute.demo.BeanLifecycleDemoBean" init-method="customInit" destroy-method="customDestroy"></bean>

    <bean id="beanPostProcessorDemoBean" class="com.stackroute.demo.BeanPostProcessorDemoBean"></bean>

</beans>